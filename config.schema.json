      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "format": "password"
      },
      "modes": {
        "title": "Choose the switch modes you wish to show.",
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["Confort", "Eco", "Eco Plus", "Sleep", "Antifreeze"]
        },
        "uniqueItems": true,
        "minItems": 1
      }
    }
  },
  "form": null,
  "display": null
}
